# Playwright environment - local
# Sourced by TSM before starting the server

# Required - data directory for reports, results, logs
export PW_DIR="${PW_DIR:-$HOME/pj/pw}"

# Server
export PORT="${PORT:-9324}"
export NODE_ENV="${NODE_ENV:-development}"

# Target environment (dev|staging|prod|local)
export PLAYWRIGHT_TARGET_ENV="${PLAYWRIGHT_TARGET_ENV:-dev}"

# Logging
export LOG_LEVEL="${LOG_LEVEL:-info}"
export LOG_ENABLE_CONSOLE="${LOG_ENABLE_CONSOLE:-true}"

# Optional paths
export PD_DIR="${PD_DIR:-$HOME/pj/pd}"
