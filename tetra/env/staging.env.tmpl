# Staging Environment Template
# Copy this to env/local-staging.env and customize with your actual secrets
# Never commit local*.env files to git

export NODE_ENV=staging
export PORT=8000
export TETRA_ENV=staging

# DigitalOcean Spaces Configuration (Staging)
export SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
export SPACES_BUCKET=your-staging-bucket
export SPACES_ACCESS_KEY=your_staging_access_key_here
export SPACES_SECRET_KEY=your_staging_secret_key_here

# Staging Paths
export PD_DIR=/home/staging/pj/pd
export LOG_DIR=/home/staging/.local/share/logs

# Staging Configuration
export DOMAIN_NAME=staging.pixeljamarcade.com
export SECURE_MODE=true

# Staging Database/Storage
export USER=staging