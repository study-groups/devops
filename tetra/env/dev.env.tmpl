# Development Environment Template
# Copy this to env/dev.env and customize with your actual secrets
# Never commit *.env files to git (only *.env.tmpl files are safe)

export NODE_ENV=development
export PORT=8000
export TETRA_ENV=dev

# DigitalOcean Spaces Configuration (Development)
export SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
export SPACES_BUCKET=your-dev-bucket
export SPACES_ACCESS_KEY=your_dev_access_key_here
export SPACES_SECRET_KEY=your_dev_secret_key_here

# Development Paths
export PD_DIR=/home/dev/pj/pd
export LOG_DIR=/home/dev/.local/share/logs

# Development Configuration
export DOMAIN_NAME=dev.pixeljamarcade.com
export DEBUG=true
export VERBOSE=true

# Development Database/Storage
export USER=dev