# Production Environment Template
# Copy this to env/local-prod.env and customize with your actual secrets
# Never commit local*.env files to git

export NODE_ENV=production
export PORT=8000
export TETRA_ENV=prod

# DigitalOcean Spaces Configuration (Production)
export SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
export SPACES_BUCKET=your-production-bucket
export SPACES_ACCESS_KEY=your_production_access_key_here
export SPACES_SECRET_KEY=your_production_secret_key_here

# Production Paths
export PD_DIR=/home/prod/pj/pd
export LOG_DIR=/home/prod/.local/share/logs

# Production Configuration
export DOMAIN_NAME=pixeljamarcade.com
export SECURE_MODE=true

# Production Database/Storage
export USER=prod