#!/usr/bin/env bash
# TSM Service: tetra (Development Environment)
# Tetra unified orchestration dashboard for @dev deployment

TSM_NAME="tetra"
TSM_CWD="/root/src/devops/tetra"
TSM_ENV_FILE="env/dev.env"
TSM_PORT="4444"

# Pre-command validation for production deployment
TSM_PRE_COMMAND="echo 'Starting Tetra Dashboard (@dev) on port 4444...' && test -f server/server.js || { echo 'FATAL: server.js not found'; exit 1; }"
TSM_COMMAND="node server/server.js --env dev"
TSM_DESCRIPTION="Tetra unified orchestration server (@dev environment)"
TSM_HEALTH_CHECK="http://127.0.0.1:4444/health"

# Auto-start configuration
TSM_AUTOSTART="true"
TSM_RESTART_ON_FAILURE="true"
