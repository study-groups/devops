# Find color function usage outside color module
# Use: magicfind spec color-usage
# Match: magicfind "color functions", magicfind "tcolor usage"

name: Color Function Usage
alias: color, tcolor, colors, text_color
path: $TETRA_SRC/bash
type: sh
exclude: color
mode: detail

[patterns]
render:   text_color|bg_only|reset_color
api:      \btcolor\b|tc_status|tc_available
source:   source.*color_(api|core|palettes)\.sh
hex:      hex_to_256|hex_to_rgb|rgb_to_hex
