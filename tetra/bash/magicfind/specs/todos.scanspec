# Find TODO/FIXME comments
# Use: magicfind spec todos
# Match: magicfind "find todos", magicfind "todo fixme"

name: TODO Comments
alias: todo, todos, fixme, hack, xxx
path: $TETRA_SRC/bash
type: sh
exclude: .git, node_modules
mode: detail

[patterns]
todo:   TODO
fixme:  FIXME
hack:   HACK|XXX
note:   NOTE:|NB:
