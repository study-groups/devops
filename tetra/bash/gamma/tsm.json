{
  "name": "gamma",
  "org": "tetra",
  "description": "Game Match-Making Allocator",
  "version": "1.0.0",

  "command": "node gamma.js",
  "cwd": "${TETRA_SRC}/bash/gamma",

  "port": 8085,
  "ports": {
    "http": 8085,
    "udp": 1985
  },

  "env": {
    "GAMMA_MIDI_MP_HOST": "localhost",
    "GAMMA_MIDI_MP_PORT": "1984"
  },

  "health": {
    "endpoint": "http://localhost:8085/api/status",
    "interval": 30
  },

  "tags": ["matchmaking", "multiplayer", "control-plane"],

  "dependencies": ["midi-mp"]
}
