action_start_watchdog() {
    local env="${1:-Local}"
    echo "â–¶ï¸  Starting Watchdog ($env)..."
    echo ""
    sep
    echo ""
    local watchdog_script="${TETRA_DIR}/bash/watchdog/watchdog.sh"
