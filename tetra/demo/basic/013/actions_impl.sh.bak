            echo "ğŸŒ Would execute on dev server"
            echo "âš ï¸  Remote execution not yet configured"
        else
            bash "$watchdog_script" &
            echo "âœ“ Watchdog started in background (PID: $!)"
        fi
    else
        echo "âš ï¸  Watchdog script not found: $watchdog_script"
    fi
}

action_stop_watchdog() {
    echo "â¹ï¸  Stopping Watchdog..."
